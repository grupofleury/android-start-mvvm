<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

  <android.support.v7.widget.Toolbar
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:background="@android:color/background_light"
      android:theme="?attr/actionBarTheme"
      android:minHeight="?attr/actionBarSize"
      android:id="@+id/toolbar" app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"/>
  <TextView
          android:text="Users"
          android:layout_width="wrap_content"
          android:layout_height="24dp"
          android:id="@+id/textView2" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
          app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
          android:layout_marginBottom="8dp"
          app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
          app:layout_constraintTop_toTopOf="@+id/toolbar" android:textSize="18sp" android:textStyle="bold"
          android:textColor="@color/colorAccent"/>
</android.support.constraint.ConstraintLayout>